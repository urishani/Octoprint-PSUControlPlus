<form class="form-horizontal">
    <h4>General</h4>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">PSU warning
                <input type="checkbox" data-bind="checked: settings.plugins.psucontrolPlus.enablePowerOffWarningDialog"> Show warning dialog when powering off via toggle button.
            </label>
        </div>
    </div>
    <!-- ko if: hasGPIO() && (settings.plugins.psucontrolPlus.switchingMethod() === "GPIO" || settings.plugins.psucontrolPlus.sensingMethod() === "GPIO") -->
    <div class="control-group">
        <label class="control-label">GPIO Mode</label>
        <div class="controls">
            <select data-bind="value: settings.plugins.psucontrolPlus.GPIOMode">
                <option value="BOARD">BOARD</option>
                <option value="BCM">BCM</option>
            </select>
            <span class="help-inline">Pin number will be converted if an alternate mode has already been set by another plugin.</span>
        </div>
    </div>
    <!-- /ko -->
    <br />

    <h4>Switching</h4>
    <div class="control-group">
        <label class="control-label">Switching Method</label>
        <div class="controls">
            <select data-bind="value: settings.plugins.psucontrolPlus.switchingMethod">
                <option value="GCODE">G-Code Command</option>
                <option value="SYSTEM">System Command</option>
                <!-- ko if: hasGPIO() -->
                <option value="GPIO">GPIO Pin</option>
                <!-- /ko -->
            </select>
        </div>
    </div>
    <!-- ko if: settings.plugins.psucontrolPlus.switchingMethod() === "GPIO" -->
    <div class="control-group">
        <label class="control-label">On/Off GPIO Pin for PSU</label>
        <div class="controls">
            <input type="number" min="0" class="input-mini"
                data-bind="value: settings.plugins.psucontrolPlus.onoffPSUGPIOPin">
            <input type="checkbox"
                data-bind="checked: settings.plugins.psucontrolPlus.invertonoffPSUGPIOPin"> Invert
        </div>
        <label class="control-label">On/Off GPIO Pin for LIGHT</label>
        <div class="controls">
            <input type="number" min="0" class="input-mini"
                data-bind="value: settings.plugins.psucontrolPlus.onoffLightGPIOPin">
            <input type="checkbox"
                data-bind="checked: settings.plugins.psucontrolPlus.invertonoffLightGPIOPin"> Invert
        </div>
        <label class="control-label">On/Off GPIO Pin for FAN</label>
        <div class="controls">
            <input type="number" min="0" class="input-mini"
                data-bind="value: settings.plugins.psucontrolPlus.onoffFanGPIOPin">
            <input type="checkbox"
                data-bind="checked: settings.plugins.psucontrolPlus.invertonoffFanGPIOPin"> Invert
        </div>
    </div>
    <!-- /ko -->
    <!-- ko if: settings.plugins.psucontrolPlus.switchingMethod() === "GCODE" -->
    <div class="control-group">
        <label class="control-label">On G-Code Command</label>
        <div class="controls">
            <input type="text" class="input-mini" data-bind="value: settings.plugins.psucontrolPlus.onGCodeCommand">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Off G-Code Command</label>
        <div class="controls">
            <input type="text" class="input-mini" data-bind="value: settings.plugins.psucontrolPlus.offGCodeCommand">
        </div>
    </div>
    <!-- /ko -->
    <!-- ko if: settings.plugins.psucontrolPlus.switchingMethod() === "SYSTEM" -->
    <div class="control-group">
        <label class="control-label">On System Command</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.psucontrolPlus.onSysCommand">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Off System Command</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.psucontrolPlus.offSysCommand">
        </div>
    </div>
    <!-- /ko -->
    <!-- ko if: settings.plugins.psucontrolPlus.switchingMethod() === "GPIO" || settings.plugins.psucontrolPlus.switchingMethod() === "SYSTEM" -->
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
            <input type="checkbox" data-bind="checked: settings.plugins.psucontrolPlus.enablePseudoOnOff"> Enable switching with G-Code commands.
            </label>
        </div>
    </div>
    <!-- ko if: settings.plugins.psucontrolPlus.enablePseudoOnOff() -->
    <div class="control-group">
        <label class="control-label">On G-Code Command</label>
        <div class="controls">
            <input type="text" class="input-mini" data-bind="value: settings.plugins.psucontrolPlus.pseudoOnGCodeCommand">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Off G-Code Command</label>
        <div class="controls">
            <input type="text" class="input-mini" data-bind="value: settings.plugins.psucontrolPlus.pseudoOffGCodeCommand">
        </div>
    </div>
    <!-- /ko -->
    <!-- /ko -->
    <br />

    <h4>Sensing</h4>
    <div class="control-group">
        <label class="control-label">Sensing Method</label>
        <div class="controls">
            <select data-bind="value: settings.plugins.psucontrolPlus.sensingMethod">
                <option value="INTERNAL">Internal</option>
                <!-- ko if: hasGPIO() -->
                <option value="GPIO">GPIO Pin</option>
                <!-- /ko -->
                <option value="SYSTEM">System Command</option>
            </select>
        </div>
    </div>
    <!-- ko if: settings.plugins.psucontrolPlus.sensingMethod() === "GPIO" -->
    <div class="control-group">
        <label class="control-label">Sensing GPIO Pin</label>
        <div class="controls">
            <input type="number" min="0" class="input-mini" data-bind="value: settings.plugins.psucontrolPlus.senseGPIOPin">
            <select data-bind="value: settings.plugins.psucontrolPlus.senseGPIOPinPUD" class="input-medium">
                <option value="">Float</option>
                <option value="PULL_UP">Pull-Up</option>
                <option value="PULL_DOWN">Pull-Down</option>
            </select>
            <input type="checkbox" data-bind="checked: settings.plugins.psucontrolPlus.invertsenseGPIOPin"> Invert
        </div>
    </div>
    <!-- /ko -->
    <!-- ko if: settings.plugins.psucontrolPlus.sensingMethod() === "SYSTEM" -->
    <div class="control-group">
        <label class="control-label">Sensing System Command</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.psucontrolPlus.senseSystemCommand">
        </div>
    </div>
    <!-- /ko -->
    <div class="control-group">
        <label class="control-label">Polling Interval</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" min="1" max="10" step="1" class="input-mini text-right" data-bind="value: settings.plugins.psucontrolPlus.sensePollingInterval">
                <span class="add-on">sec</span>
            </div>
        </div>
    </div>
    <br />

    <h4>Power On Options</h4>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
            <input type="checkbox" data-bind="checked: settings.plugins.psucontrolPlus.autoOn"> Automatically turn PSU ON
            </label>
        </div>
    </div>
    <!-- ko if: settings.plugins.psucontrolPlus.autoOn() -->
    <div class="control-group">
        <label class="control-label">Trigger Commands</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.psucontrolPlus.autoOnTriggerGCodeCommands">
        </div>
    </div>
    <!-- /ko -->
    <div class="control-group">
        <label class="control-label">Post On Delay</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" min="0" step="0.1" class="input-mini text-right" data-bind="value: settings.plugins.psucontrolPlus.postOnDelay">
                <span class="add-on">sec</span>
            </div>
        </div>
    </div>  
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
            <input type="checkbox" data-bind="checked: settings.plugins.psucontrolPlus.connectOnPowerOn"> Connect when powered on.
            </label>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Post On GCode Script<br/><font color="red">experimental</font></label>
        <div class="controls">
            <textarea rows="5" class="block" data-bind="value: scripts_gcode_psucontrol_post_on"></textarea>
        </div>
    </div>
    <br />

    <h4>Power Off Options</h4>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">PSU
                <input type="checkbox" data-bind="checked: settings.plugins.psucontrolPlus.powerOffPSUWhenIdle"> Automatically turn PSU OFF when idle
            </label>
            <label class="checkbox">LIGHT
                <input type="checkbox" data-bind="checked: settings.plugins.psucontrolPlus.powerOffLightWhenIdle"> Automatically turn LIGHT OFF when idle
            </label>
            <label class="checkbox">FAN
                <input type="checkbox" data-bind="checked: settings.plugins.psucontrolPlus.powerOffFanWhenIdle"> Automatically turn FAN OFF when idle
            </label>
        </div>
    </div>
    <!-- ko if: settings.plugins.psucontrolPlus.powerOffWhenIdle() -->
    <div class="control-group">
        <label class="control-label">Idle Timeout</label>
        <div class="controls">
                <input type="number" min="0" class="input-mini text-right" data-bind="value: settings.plugins.psucontrolPlus.idleTimeout">
                <span class="add-on">min</span>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Ignore Commands</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.psucontrolPlus.idleIgnoreCommands">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Wait For Temperature</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" min="0" class="input-mini text-right" data-bind="value: settings.plugins.psucontrolPlus.idleTimeoutWaitTemp">
                <span class="add-on">°C</span>
            </div>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Pre Off GCode Script<br/><font color="red">experimental</font></label>
        <div class="controls">
            <textarea rows="5" class="block" data-bind="value: scripts_gcode_psucontrol_pre_off"></textarea>
        </div>
    </div>
    <!-- /ko -->
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
            <input type="checkbox" data-bind="checked: settings.plugins.psucontrolPlus.disconnectOnPowerOff"> Disconnect on power off.
            </label>
        </div>
    </div>
</form>
